@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h2>
            Admin Category List
        </h2>
        <hr>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/adminrole/roles/@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/adminrole/roles/deleterole" method="POST" style="display: inline;">
                                    <input type="hidden" name="id" value="@item.Id">
                                    <button type="submit" class="btn btn-primary btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>
                <div class="alert alert-warning">
                    <h3>No Roles</h3>
                </div>
            </div>
        }

    </div>
</div>