@model OrderListViewModel

<h1>Orders</h1>
<hr>

@foreach (var order in Model.Orders)
{
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <td colspan="2">OrderId: #@order.OrderNumber</td>
                <td>Price</td>
                <td>Quantity</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
                <tr>
                    <td><img src="/images/@orderItem.ImageUrl" width="80px" ></td>
                    <td>@orderItem.ProductName</td>
                    <td>@orderItem.Price</td>
                    <td>@orderItem.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    Customer Name:
                </th>
                <th>@($"{order.FirstName} {order.LastName}")</th>
                <th rowspan="6">Total : @order.TotalPrice().ToString("c")</th>
            </tr>
            <tr >
                <td>Address</td>
                <td>@order.Address</td>
            </tr>
             <tr >
                <td>Email</td>
                <td>@order.Email</td>
            </tr>
             <tr >
                <td>Phone</td>
                <td>@order.Phone</td>
            </tr>
             <tr >
                <td>Order Status:</td>
                <td>@order.OrderStatus</td>
            </tr>
             <tr >
                <td>Payment Type</td>
                <td>@order.PaymentType</td>
            </tr>
        </tfoot>
    </table>
}
