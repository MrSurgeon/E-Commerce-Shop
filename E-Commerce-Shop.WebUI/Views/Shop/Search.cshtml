@model SearchViewModel
@{
    var products = @Model.Products;
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in products)
            {
                <div class="col-12 col-md-6 col-xl-4 mb-2 ">
                    @await Html.PartialAsync("_product",product)
                </div>
            }
        </div>
    </div>
</div>
