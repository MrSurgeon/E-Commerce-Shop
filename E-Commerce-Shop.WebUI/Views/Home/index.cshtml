@model ProductViewModel
@{
    var products = @Model.Products;
}
@section Jumbotron{
<partial name="_header">
    }
    <div class="row">
    @if (!products.Any())
    {
        @await Html.PartialAsync("_noProduct")
    }
    else
    {
        @foreach (var product in products)
        {
                <div class="col-3">
                @await Html.PartialAsync("_product",product)
                </div>
        }
    }
    </div>

@section Scripts{
