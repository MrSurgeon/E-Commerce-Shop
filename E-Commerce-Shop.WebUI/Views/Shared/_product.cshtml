@model Product
<div class="card h-100">
    <div class="h-75 d-flex">
        <img src="/images/@Model.ImageUrl" class="card-img-top align-self-center" alt="...">
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <a href="/product/details/@Model.ProductId" class="btn btn-primary btn-sm">Ä°ncele</a>
        <a href="/product/Edit/@Model.ProductId" class="btn btn-primary btn-sm">Edit</a>
        <form method="POST" action="/product/Delete" style="display: inline-block;">
            <input type="hidden" asp-for="@Model.ProductId" name="productId">
            <button type="submit" class="btn btn-primary btn-sm">Delete</button>
        </form>
    </div>
</div>