@model Product
<div class="card h-100 ">
    <div class="h-75 d-flex">
        <img src="/images/@Model.ImageUrl" class="card-img-top align-self-center" alt="...">
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i> @Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/@Model.Url" class="btn btn-primary btn-sm">İncele</a>

            <form action="/Card/AddToCard" method="POST" style="display: inline;">
                <input type="hidden" name="productId" value="@Model.ProductId">
                <input type="hidden" name="quantity" value="1">
                <button class="btn btn-primary btn-sm" type="submit">
                    Add To Card
                </button>
            </form>
        }
        else
        {
            <a href="/@Model.Url" class="btn btn-primary">İncele</a>
        }
    </div>
</div>